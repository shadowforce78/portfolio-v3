<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <!-- Informations -->
      <div class="footer-section">
        <h3 class="footer-title"><%= portfolio.nickname %></h3>
        <p class="footer-text"><%= portfolio.tagline %></p>
      </div>
      
      <!-- Navigation rapide -->
      <div class="footer-section">
        <h4 class="footer-subtitle">Navigation</h4>
        <ul class="footer-links">
          <li><a href="/"><%= translations.nav.home %></a></li>
          <li><a href="/about"><%= translations.nav.about %></a></li>
          <li><a href="/projects"><%= translations.nav.projects %></a></li>
          <li><a href="/contact"><%= translations.nav.contact %></a></li>
        </ul>
      </div>
      
      <!-- Liens sociaux -->
      <div class="footer-section">
        <h4 class="footer-subtitle">RÃ©seaux</h4>
        <div class="social-links">
          <a href="<%= portfolio.github %>" target="_blank" rel="noopener noreferrer" class="social-link" aria-label="GitHub">
            <i class="fab fa-github"></i>
          </a>
          <a href="<%= portfolio.linkedin %>" target="_blank" rel="noopener noreferrer" class="social-link" aria-label="LinkedIn">
            <i class="fab fa-linkedin"></i>
          </a>
        </div>
      </div>
    </div>
    
    <!-- Copyright -->
    <div class="footer-bottom">
      <p>
        &copy; <%= new Date().getFullYear() %> <%= portfolio.name %>. <%= translations.footer.rights %>.
      </p>
      <p class="footer-made-with">
        <%= translations.footer.madeWith %> <i class="fas fa-heart"></i> <%= translations.footer.by %> <%= portfolio.nickname %>
      </p>
    </div>
  </div>
  
  <!-- Bouton scroll to top -->
  <button class="scroll-top" aria-label="Scroll to top">
    <i class="fas fa-arrow-up"></i>
  </button>
</footer>
