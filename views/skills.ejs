<%- include('partials/head') %>

<%- include('partials/header') %>

<section class="page-header parallax-section">
  <div class="container">
    <h1 class="page-title fade-in"><%= translations.skills.title %></h1>
    <p class="page-subtitle fade-in"><%= translations.skills.subtitle %></p>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="skills-container">
      <!-- Langages -->
      <div class="skill-category fade-in-up">
        <h3 class="category-title">
          <i class="fas fa-code"></i>
          <%= translations.skills.categories.languages %>
        </h3>
        <div class="skills-list">
          <% portfolio.skills.languages.forEach((skill, index) => { %>
            <div class="skill-item" style="animation-delay: <%= index * 0.05 %>s;">
              <span class="skill-name"><%= skill %></span>
            </div>
          <% }) %>
        </div>
      </div>
      
      <!-- Frameworks -->
      <div class="skill-category fade-in-up" style="animation-delay: 0.1s;">
        <h3 class="category-title">
          <i class="fas fa-layer-group"></i>
