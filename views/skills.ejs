          <% }) %>
        </div>
      </div>
      
      <!-- Tools -->
      <div class="skill-category fade-in-up" style="animation-delay: 0.5s;">
        <h3 class="category-title">
          <i class="fas fa-tools"></i>
          <%= translations.skills.categories.tools %>
        </h3>
        <div class="skills-list">
          <% portfolio.skills.tools.forEach((skill, index) => { %>
