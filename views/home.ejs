<%- include('partials/head') %>

<%- include('partials/header') %>

<!-- Hero Section -->
<section class="hero" id="hero">
  <div class="hero-background">
    <div class="gradient-orb orb-1"></div>
    <div class="gradient-orb orb-2"></div>
    <div class="gradient-orb orb-3"></div>
  </div>
  
  <div class="container">
    <div class="hero-content fade-in">
      <p class="hero-greeting">
        <%= translations.hero.greeting %>
      </p>
      <h1 class="hero-title">
        <span class="gradient-text"><%= portfolio.name %></span>
      </h1>
      <h2 class="hero-subtitle">
        <%= portfolio.title %>
      </h2>
      <p class="hero-description">
        <%= translations.hero.description %>
      </p>
      
      <div class="hero-cta">
        <a href="/projects" class="btn btn-primary">
          <%= translations.hero.cta %>
          <i class="fas fa-arrow-right"></i>
        </a>
        <a href="/download-cv" class="btn btn-secondary">
          <i class="fas fa-download"></i>
          <%= translations.hero.downloadCv %>
        </a>
      </div>
      
      <div class="hero-social">
        <a href="<%= portfolio.github %>" target="_blank" rel="noopener noreferrer" class="social-icon">
          <i class="fab fa-github"></i>
        </a>
        <a href="<%= portfolio.linkedin %>" target="_blank" rel="noopener noreferrer" class="social-icon">
          <i class="fab fa-linkedin"></i>
        </a>
      </div>
    </div>
    
    <div class="hero-scroll">
      <div class="scroll-indicator">
        <span></span>
      </div>
      <p>Scroll</p>
    </div>
  </div>
</section>

<!-- Featured Projects Preview -->
<section class="section section-projects-preview">
  <div class="container">
    <div class="section-header fade-in-up">
      <h2 class="section-title"><%= translations.projects.featured %></h2>
      <a href="/projects" class="section-link">
        <%= translations.projects.all %> <i class="fas fa-arrow-right"></i>
      </a>
    </div>
    
    <div class="projects-grid">
      <% portfolio.projects.filter(p => p.featured).slice(0, 3).forEach((project, index) => { %>
        <div class="project-card glass fade-in-up" style="animation-delay: <%= index * 0.1 %>s;">
          <div class="project-image">
            <img src="<%= project.image %>" alt="<%= project.title %>" loading="lazy">
            <div class="project-overlay">
              <a href="/projects/<%= project.id %>" class="project-link">
                <i class="fas fa-eye"></i>
              </a>
            </div>
          </div>
          <div class="project-content">
            <h3 class="project-title"><%= project.title %></h3>
            <p class="project-description"><%= project.description %></p>
            <div class="project-tags">
              <% project.tags.forEach(tag => { %>
                <span class="tag"><%= tag %></span>
              <% }) %>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</section>

<!-- Skills Preview -->
<section class="section section-skills-preview">
  <div class="container">
    <div class="section-header fade-in-up">
      <h2 class="section-title"><%= translations.skills.title %></h2>
      <a href="/skills" class="section-link">
        <%= translations.common.learnMore %> <i class="fas fa-arrow-right"></i>
      </a>
    </div>
    
    <div class="skills-marquee">
      <div class="skills-track">
        <% const allSkills = [...portfolio.skills.languages, ...portfolio.skills.frameworks, ...portfolio.skills.tools]; %>
        <% allSkills.concat(allSkills).forEach(skill => { %>
          <span class="skill-badge"><%= skill %></span>
        <% }) %>
      </div>
    </div>
  </div>
</section>

<!-- CTA Section -->
<section class="section section-cta">
  <div class="container">
    <div class="cta-card glass fade-in-up">
      <h2 class="cta-title"><%= translations.contact.title %></h2>
      <p class="cta-text"><%= translations.contact.subtitle %></p>
      <a href="/contact" class="btn btn-primary btn-lg">
        <%= translations.nav.contact %> <i class="fas fa-paper-plane"></i>
      </a>
    </div>
  </div>
</section>

<%- include('partials/footer') %>

<%- include('partials/scripts') %>
