<%- include('partials/head') %>

<%- include('partials/head') %>

<%- include('partials/header') %>

<section class="page-header parallax-section">
  <div class="container">
    <h1 class="page-title fade-in"><%= translations.about.title %></h1>
    <p class="page-subtitle fade-in"><%= translations.about.subtitle %></p>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="about-grid">
      <div class="about-image fade-in-left">
        <div class="image-wrapper glass">
          <img src="/images/profile.jpg" alt="<%= portfolio.name %>" onerror="this.src='/images/placeholder-profile.jpg'">
          <div class="image-frame"></div>
        </div>
      </div>
      
      <div class="about-content fade-in-right">
        <h2 class="gradient-text"><%= portfolio.name %></h2>
        <h3 class="about-role"><%= portfolio.title %></h3>
        <p class="about-bio"><%= portfolio.bio %></p>
        
        <div class="about-info">
          <div class="info-item">
            <i class="fas fa-map-marker-alt"></i>
            <span><%= portfolio.location %></span>
          </div>
          <div class="info-item">
            <i class="fas fa-envelope"></i>
            <span><%= portfolio.email %></span>
          </div>
        </div>
        
        <div class="about-actions">
          <a href="/contact" class="btn btn-primary">
            <%= translations.nav.contact %>
          </a>
          <a href="/download-cv" class="btn btn-secondary">
            <i class="fas fa-download"></i> <%= translations.hero.downloadCv %>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('partials/footer') %>

<%- include('partials/scripts') %>

<%- include('partials/scripts') %>

